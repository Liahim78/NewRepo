<Window x:Class="TaskForPlarium.Views.ChooseDirectory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskForPlarium.Views"
        mc:Ignorable="d"
        Title="ChooseDirectory" Height="150" Width="300">
    <Grid Background="Orange">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"  >Введите адресс директории</TextBlock>
        <TextBox Grid.Row="1" Margin="10,5" ></TextBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Margin="10,5" FontSize="15" >Выбрать</Button>
            <Button Grid.Column="1" Margin="10,5" FontSize="15" Click="Button_Click" >Отмена</Button>
        </Grid>
    </Grid>
</Window>
